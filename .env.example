# Postgres
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/dmag_ads

# Alert recipient
ALERT_TO_EMAIL=ricky.ferrer@dmagazine.com

# SMTP settings (example: Google Workspace relay, SendGrid, SES, etc.)
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USERNAME=your_smtp_user
SMTP_PASSWORD=your_smtp_password
SMTP_FROM=ad-alerts@dmagazine.com
SMTP_USE_TLS=true

# Optional JSON map when CSV headers differ from defaults
# Example:
# {"campaign_id":"Line Item ID","campaign_name":"Campaign","advertiser":"Advertiser","start_date":"Start","end_date":"End","goal_impressions":"Goal","delivered_impressions":"Delivered"}
CSV_COLUMN_MAP=

# Number of trailing days for average delivery rate calculation
AVG_WINDOW_DAYS=7

# Max number of risk rows included in one alert email
ALERT_MAX_ROWS=50

# Google Ad Manager direct integration
GAM_NETWORK_CODE=1039436
# Absolute path to service account key JSON
GOOGLE_APPLICATION_CREDENTIALS=/absolute/path/to/service-account.json
# Optional for logs / client identity
GAM_APPLICATION_NAME=D Magazine Pacing

# Map report output column indexes to required pacing fields.
# Defaults assume report resembles: CLIENT, REP, IO, GAM LINK, STATUS, START, END, PACE, IMPRESSIONS, GOAL, GOAL PACE, NOTES
# Example with explicit advertiser index:
# {"campaign_name":0,"advertiser":0,"campaign_id":2,"status":4,"start_date":5,"end_date":6,"delivered_impressions":8,"goal_impressions":9}
GAM_FIELD_MAP=
